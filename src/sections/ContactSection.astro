<style>
    .separator {
        background: linear-gradient(-45deg, #cfa7d2, #e6aff4, #cf79d5);
        width: 100px;
        height: 10px;
        border-radius: 10px;
        margin: 1rem auto;
        margin-bottom: 2.5rem;
    }
    .contact {
        text-align: center;
        padding: 3rem 1rem;
    }

    .contact h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .icons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .icons a {
        width: 48px;
        height: 48px;
        display: grid;
        place-items: center;
        border-radius: 50%;
        background: #4c4c4c;
        transition:
            transform 0.2s ease,
            background 0.2s ease;
    }

    .icons a:hover {
        background: #c1c1c1;
    }

    .icons svg {
        width: 22px;
        height: 22px;
        fill: white;
    }

    .cta {
        width: fit-content;
        margin: 2rem auto;
        padding: 1rem 2rem;
        border-radius: 50px; /* Bordes más redondeados para un look moderno */
        border: none;
        cursor: pointer;

        /* Gradiente animado */
        background: linear-gradient(-45deg, #cfa7d2, #e6aff4, #cf79d5);
        background-size: 200% 200%;
        animation: gradientMove 3s ease infinite;

        /* Sombra suave */
        box-shadow: 0 4px 15px rgba(124, 95, 182, 0.3);
        border: 2px solid rgb(251, 159, 214);
        box-shadow: 1px 1px 10px rgb(205, 143, 222);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .cta:hover {
        border: 2px solid rgb(253, 253, 253);
    }

    .cta a {
        text-decoration: none;
        color: rgb(199, 186, 199);
        font-weight: bold;
        font-family: sans-serif;
        letter-spacing: 1px;

        font-size: 0.9rem;
        mix-blend-mode: color-dodge;
    }

    .cta a:hover {
        color: rgb(199, 186, 199);
    }

    @keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 40%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>
