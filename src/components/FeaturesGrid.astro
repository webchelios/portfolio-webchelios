<style>
    .features-grid {
        display: grid;
        background-color: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        padding: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 100%;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 4rem;
        margin-left: 1rem;
        margin-right: 1rem;
        mix-blend-mode: hard-light;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.08);
        padding: 1.2rem;
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: 0.3s ease;
    }

    .icon-box {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.7rem;
        border-radius: 12px;
        display: flex;
        color: white;
    }

    .feature-info {
        text-align: left;
    }
    .feature-info span {
        font-size: 0.7rem;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        display: block;
    }
    .feature-info p {
        color: white;
        font-weight: bold;
        font-size: 1rem;
        margin: 0;
    }
</style>
